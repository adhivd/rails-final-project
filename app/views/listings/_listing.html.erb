<div id="listing">
    <h1> <%= listing.address %> </h1>
    <h3> <%= listing.price %> </h3>
    <h3> <%= listing.term %> </h3>
    <h3> <%= listing.bedrooms %> </h3>
    <h3> <%= listing.bathrooms %> </h3>
    <h3> <%= listing.square_footage %> </h3>
    <h3> <%= listing.user_id %> </h3>
    <h3> <%= link_to "Show More", controller: "listings", action: "show", id: listing.id %>
          <% if Favorite.exists?(user_id: current_user.id, listing_id: listing.id) %>
            <li>
            <%= link_to "UNFAV!", action: "destroy", :method=>:delete, controller: "favorites" %>
            </li>
          <% else %>
            <li>
            <%= button_to "FAV!", action: "create", controller: "favorites", favorite: {listing_id: listing.id, user_id: current_user.id} %>
            </li>
          <% end %>
    </h3>
</div>
