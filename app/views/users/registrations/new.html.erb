
<header>
    <section>
    <h1>Hibernate</h1>
        </section>
</header>
<section style="text-align:center;">
<h2 style="margin: 0 auto;">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "createlisting") do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.text_field :first_name, autofocus: true, class: 'fancy-input', placeholder: 'First Name' %>
  </div>
  <div class="field">
    <%= f.text_field :last_name, autofocus: true, class: 'fancy-input', placeholder: 'Last Name' %>
  </div>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'fancy-input', placeholder: 'Email' %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'fancy-input', placeholder: 'Password' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'fancy-input', placeholder: 'Confirm Password' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
    <%= render "devise/shared/links" %>

<% end %>

</section>
